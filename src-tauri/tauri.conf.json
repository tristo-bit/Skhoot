{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skhoot Desktop Seeker",
  "version": "0.1.0",
  "identifier": "com.skhoot.desktop-seeker",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Skhoot - Desktop Seeker",
        "width": 1200,
        "height": 800,
        "minWidth": 360,
        "minHeight": 480,
        "resizable": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src http://localhost:5173 tauri://localhost https://hub.docker.com https://cdn.jsdelivr.net; img-src 'self' data: https://cdn.jsdelivr.net https://*.docker.com https://*.githubusercontent.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "msi",
      "nsis",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
