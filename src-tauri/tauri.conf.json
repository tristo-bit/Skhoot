{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skhoot Desktop Seeker",
  "version": "0.1.5",
  "identifier": "com.skhoot.desktop-seeker",
  "build": {
    "beforeBuildCommand": "npm run build && npm run prepare:whisper && cd backend && cargo build --release && node ../scripts/copy-backend-binary.cjs",
    "beforeBundleCommand": "",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Skhoot - Desktop Seeker",
        "width": 1200,
        "height": 800,
        "minWidth": 360,
        "minHeight": 480,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src http://localhost:5173 http://localhost:3001 http://127.0.0.1:* http://localhost:* tauri://localhost https://hub.docker.com https://cdn.jsdelivr.net https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com; img-src 'self' data: https://cdn.jsdelivr.net https://*.docker.com https://*.githubusercontent.com; style-src 'self' 'unsafe-inline'; media-src 'self' blob: mediastream:"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "msi",
      "nsis",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],

    "macOS": {
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "infoPlist": "Info.plist"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": [
          "pipewire",
          "pipewire-pulse",
          "wireplumber",
          "xdg-desktop-portal",
          "xdg-desktop-portal-gtk",
          "ffmpeg"
        ],
        "recommends": [
          "pulseaudio"
        ],
        "postInstallScript": "installer/deb/postinst"
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
